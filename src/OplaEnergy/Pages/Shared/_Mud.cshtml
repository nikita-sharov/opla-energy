<div class="row">
    <form class="col mt-2">
        <div class="form-row">
            <div class="form-group col">
                <small class="text-secondary">Type</small>
                <select class="form-control">
                    <option>Oil Based Mud</option>
                </select>
            </div>
            <div class="form-group col">
                <small class="text-secondary">Density, kg/m³</small>
                <input type="text" class="form-control text-center" value="1130" readonly />
            </div>
        </div>

        <div class="form-group">
            <div class="border-bottom">
                <small>Fan Reading</small>
            </div>
            <div class="form-row">
                <div class="col">
                    <small class="text-secondary">600 RPM</small>
                    <input type="text" class="form-control text-center" value="34" readonly />
                </div>
                <div class="col">
                    <small class="text-secondary">300 RPM</small>
                    <input type="text" class="form-control text-center" value="20" readonly />
                </div>
            </div>
            <div class="form-row">
                <div class="col">
                    <small class="text-secondary">200 RPM</small>
                    <input type="text" class="form-control text-center" value="16" readonly />
                </div>
                <div class="col">
                    <small class="text-secondary">100 RPM</small>
                    <input type="text" class="form-control text-center" value="25" readonly />
                </div>
            </div>
            <div class="form-row">
                <div class="col">
                    <small class="text-secondary">6 RPM</small>
                    <input type="text" class="form-control text-center" value="5" readonly />
                </div>
                <div class="col">
                    <small class="text-secondary">3 RPM</small>
                    <input type="text" class="form-control text-center" value="4" readonly />
                </div>
            </div>
        </div>

        <div class="border-bottom">
            <small>Gel Strength, lb/100ft²</small>
        </div>
        <div class="form-row">
            <div class="form-group col">
                <small class="text-secondary">10 min</small>
                <input type="text" class="form-control text-center" value="3.5" readonly />
            </div>
            <div class="form-group col">
                <small class="text-secondary">10 sec</small>
                <input type="text" class="form-control text-center" value="2.5" readonly />
            </div>
        </div>

        <button class="btn btn-block btn-warning shadow-sm font-weight-bold">Confirm</button>
    </form>
    <div class="col d-flex flex-column mt-2">
        <div class="form-group">
            <small class="text-secondary">Hydraulic Model</small>
            <select class="form-control">
                <option>Herschel Bulkley (Yield Power Law)</option>
            </select>
        </div>
        <div class="form-group flex-grow-1 d-flex flex-column">
            <small>Rheologic Analysis</small>
            <div class="flex-grow-1 border rounded" id="rheological-analysis"></div>
        </div>
        <div class="form-group">
            <small class="text-secondary">Suggested Rheology</small>
            <input type="text" class="form-control text-center" value="Herschel Bulkley (Yield Power Law)" readonly />
        </div>
    </div>
</div>
