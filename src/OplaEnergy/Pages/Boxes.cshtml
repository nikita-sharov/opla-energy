@page "/boxes"

<!DOCTYPE html>
<html lang="en">
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Boxes</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <style>
        .container {
            max-width: 400px;
        }
    </style>
</head>
<body class="text-secondary">
    <main class="container">
        <form class="mt-2 border rounded-lg shadow-sm p-2">
            <div class="rounded-lg shadow-sm bg-secondary p-2 text-center text-light">Control Center</div>
            <div class="form-row my-3">
                <div class="col-2 align-self-center">Mode:</div>
                <div class="col-10">
                    <div class="btn-group btn-group-toggle btn-block rounded-lg">
                        <label class="btn btn-primary">
                            <input type="radio" id="sbp" name="mode" checked />SBP
                        </label>
                        <label class="btn btn-secondary">
                            <input type="radio" id="pressure" name="mode" />Pressure
                        </label>
                        <label class="btn btn-secondary">
                            <input type="radio" id="ecd" name="mode" />ECD
                        </label>
                    </div>
                </div>
            </div>
            <div class="form-row">
                <div class="col-2 align-self-center">Depth:</div>
                <div class="col-5">
                    <select class="form-control">
                        <option>Surface</option>
                    </select>
                </div>
                <div class="col-5">
                    <input type="text" class="form-control rounded-0 text-center" value="0" readonly />
                </div>
            </div>
            <div class="form-row">
                <div class="col-2"></div>
                <div class="col-5 form-group">
                    <label for="current-value" class="mb-0"><small>Current Value</small></label>
                    <input type="text" class="form-control rounded-0 text-center" id="current-value" value="0" readonly />
                </div>
                <div class="col-5 form-group">
                    <label for="current-value" class="mb-0"><small>Set Value</small></label>
                    <input type="text" class="form-control rounded-0 text-center" id="current-value" value="0" />
                </div>
            </div>
            <div class="border-bottom">
                <small class="text-primary">Choke Controls</small>
            </div>
            <div class="my-3">
                <span>Active Choke:</span> <span class="text-primary font-weight-bold">Chokes A & B</span>
            </div>
            <div class="custom-control custom-switch my-3">
                <input type="checkbox" class="custom-control-input" checked>
                <label class="custom-control-label">Manual Choke Mode</label>
            </div>
            <div class="mx-3">
                <button class="btn btn-block btn-warning shadow-sm font-weight-bold">Confirm</button>
            </div>
        </form>

        <form class="mt-2 border rounded-lg shadow-sm p-2">
            <div class="text-primary border-bottom">
                <small><span class="font-weight-bold">Auto/Manual</span> Choke Positioning</small>
            </div>
            <div class="form-row mt-2">
                <div class="col-3">Choke A:</div>
                <div class="col-9">
                    <input type="range" class="custom-range" min="0" max="100" value="23" />
                </div>
            </div>
            <div class="form-row">
                <div class="col-3"></div>
                <div class="col-9 text-center mt-n2">
                    <small>Choke A Set Position</small>
                </div>
            </div>
            <div class="form-row mt-2">
                <div class="col-3"></div>
                <div class="col-3">
                    <input type="text" class="form-control rounded-0 text-center" value="0" />
                </div>
                <div class="col-6 pl-3">
                    <button class="btn btn-primary shadow-sm px-5">OK</button>
                </div>
            </div>
            <div class="form-row mt-2">
                <div class="col-3">Choke B:</div>
                <div class="col-9">
                    <input type="range" class="custom-range" min="0" max="100" value="0" />
                </div>
            </div>
            <div class="form-row">
                <div class="col-3"></div>
                <div class="col text-center mt-n2">
                    <small>Choke B Set Position</small>
                </div>
            </div>
            <div class="form-row mt-2">
                <div class="col-3"></div>
                <div class="col-3">
                    <input type="text" class="form-control rounded-0 text-center" value="0" />
                </div>
                <div class="col-6 pl-3">
                    <button class="btn btn-primary shadow-sm px-5">OK</button>
                </div>
            </div>
        </form>

        <form class="mt-2 border rounded-lg shadow-sm p-2">
            <div class="border-bottom">
                <small class="text-primary font-weight-bold">Choke Operation Safety Settings</small>
            </div>
            <div class="custom-control custom-switch my-3">
                <input type="checkbox" class="custom-control-input" id="active-safe-operation" checked>
                <label class="custom-control-label" for="active-safe-operation">Active Safe Operation</label>
            </div>
            <div class="form-row">
                <div class="col-7 align-self-center">Safe SBP High Limit (kPa):</div>
                <div class="col-5">
                    <input type="text" class="form-control rounded-0 text-center" value="12500" />
                </div>
            </div>
            <div class="form-row mt-n2">
                <div class="col-7 text-center text-primary">
                    <small class="font-weight-bold">Suggested: 8188.4 kPa</small>
                </div>
                <div class="col-5"></div>
            </div>
            <div class="form-row">
                <div class="col-7 align-self-center">Emergency Choke A (%):</div>
                <div class="col-5">
                    <input type="text" class="form-control rounded-0 text-center" value="45" readonly />
                </div>
            </div>
            <div class="form-row my-3">
                <div class="col-7 align-self-center">Emergency Choke B (%):</div>
                <div class="col-5">
                    <input type="text" class="form-control rounded-0 text-center" value="35" />
                </div>
            </div>
            <div class="mx-5">
                <button class="btn btn-block btn-warning mx-8 shadow-sm font-weight-bold">Confirm</button>
            </div>
        </form>
    </main>
</body>
</html>
